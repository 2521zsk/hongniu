@import '../../style/colorui.wxss';
.bg {
  top: 0;
  z-index: 0;
  background-size: cover;
  position: absolute;
}

.container {
  top: 0;
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 100%;
}

.logo {
  width: 100%;
  height: 300rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
}

.im1 {
  height: 100rpx;
  margin-left: 30%;
  width: 40%;
}

.im2 {
  margin-top: 80rpx;
  height: 60rpx;
  margin-left: 25%;
  width: 50%;
}

.listpage {
  background: white;
  min-height: 100px;
  width: 300px;
  padding-top: 20px;
}

.title {
  text-align: center;
  padding-bottom: 20px;
  font-size: 20px;
  font-weight: bold;
  border-bottom: 1rpx solid #CCCCCC;
}

.list {
  min-height: 50px;
  max-height: 350px;
}

.listbody {
  text-align: center;
  width: 80%;
  margin-left: 10%;
  line-height: 50px;
  height: 50px;
}

.btns {
  font-size: 16px;
  border-bottom: 1rpx solid #CCCCCC;
  color:RGBA(0, 0, 0, 0.54);
  background: white;
  width: 100%;
  line-height: 50px;
  height: 50px;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
