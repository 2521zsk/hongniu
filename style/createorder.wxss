@import "colorui.wxss";
@import "coloruiicon.wxss";

page {
  display: block;
  min-height: 100%;
  background-color: #efefef;
}

.v-search {
  background-color: #f4f5f7;
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-content: center;
  border: 1rpx #ececec solid;
  padding-left: 2%;
  padding-top: 10px;
}

.scancode {
  background: white;
  width: 8%;
  height: 30px;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  border-right: 1px solid #ccc;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.scanimg {
  margin: 4px;
  height: 20px;
  width: 20px;
}

.search {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  border-left: 1px solid #ccc;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  font-size: 29rpx;
  width: 90%;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-content: center;
  background: white;
}

.iconview {
  width: 10%;
  height: 30px;
}

.icon {
  margin: 6px;
  height: 16px;
  width: 16px;
}

.search input {
  width: 90%;
  height: 100%;
}

.v-filter {
  background-color: #f4f5f7;
  color: #000;
  max-height: 110rpx;
  overflow: hidden;
  width: 100%;
  border-top: 1rpx solid #ececec;
  display: flex;
  flex-direction: row;
}

.p-picker1 {
  height: 100%;
  width: 33%;
  border-left: 1rpx #ececec solid;
}

.p-lbl {
  font-size: 29rpx;
  width: 80%;
  text-align: center;
}

.picker {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  width: 100%;
  height: 100%;

  display: flex;
  flex-direction: row;
}

.picker image {
  padding-right: 5px;
  margin-top: 5px;
  margin-bottom: 5rpx;
  width: 13px;
  height: 7px;
}

.v-produclist {
  margin-bottom: 60rpx;
}

.productlist {
  background-color: white;
  display: flex;
  flex-direction: row;
  text-align: center;
  width: 100%;
  padding-left: 5%;
  padding-right: 5%;
  height: 80px;
  margin-bottom: 5rpx;
}

.productimg {
  height: 100rpx;
  width: 100rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
}

.productdetail {
  width: 80%;
  margin-top: 10px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.productname {
  text-align: left;
  font-size: 16px;
  max-height: 40px;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;

}

.v-productlbl {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.productlbl {
  min-width: 40px;
  max-width: 32%;
  min-height: 18px;
  max-height: 40px;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  border-radius: 3px;
  line-height: 20px;
  margin-right: 5rpx;
  font-size: 24rpx;
  color: #f2f2f2;
  background-color: #f45959;
  padding: 0 2px;
}

.plbl {
  min-width: 40px;
  max-width: 50%;
}

.product-add {
  height: 45px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  border-top: 1rpx lightgray solid;
  background-color: white;
}

.selecttext {
  font-size: 16px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.shopcar {
  background-color: #f3b007;
  display: flex;
  flex-direction: row;
  font-size: 16px;
  height: 45px;
}

.shopcar image {
  margin-top: 7px;
  margin-right: 5px;
  margin-left: 30rpx;
  height: 30px;
  width: 30px;
}

.shopcar text {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-right: 40rpx;
  color: #fff;
}

.iphonex-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.shop_view {
  padding-bottom: 50px;
}

.shop_list {
  height: 100px;
  border-bottom: 1px solid #dbdbdb;
  line-height: 100px;
  padding-left: 20px;
}

.fixed_top {
  background: #f33c23;
}

.fixed_top .ui-col {
  color: #fff;
}

.fixed_bottom {
  background: #fff;
  box-shadow: 0 0px 15px 0 #eaeaea;
}

.fixed_bottom .form_list {
  background: #fe6a3c;
  color: #fff;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-size: 14px;
}

.green {
  background-color: #00bc32;
}

.vip {
  background-color: #fa6e2d;
  border-radius: 3px;
  padding: 3px 8px;
}

.maoyan {
  position: relative;
  width: 48px;
  height: 48px;
  margin: 10px;
}

.maoyan .icon-badge {
  background-color: #39f;
  position: absolute;
  top: -5px;
  right: -15px;
  border: 1px solid #fff;
}
